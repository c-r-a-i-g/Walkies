@using Walkies.Framework.BaseClasses;

@model PageModelBase

<section id="services">
    <div class="container text-center pull-up-header">
        <h2 class="section-heading">This is what we do</h2>
    </div>
    <div class="container-fluid no-padding">
        <div class="row equal-height">
            <div class="col-lg-3 col-sm-6 col-xs-12 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-diamond text-primary sr-icons"></i>
                    <h3>Weekday Walking</h3>
                    <hr class="primary">
                    <img src="~/Content/images/dogs-3.jpg" />
                    <p class="text-muted">
                        Many of our valued clients have brought their pets to Walkies R Us to experience our Weekday Dog Walking services.
                    </p>
                    <p class="text-muted">
                        Regardless of what type of animal you have or how old they are, Weekday Dog Walking is always a great option.
                    </p>
                    <a href="/booking?walk" class="page-scroll btn btn-primary btn-xl sr-button pull-bottom center">Book a Weekday Walk</a>
                </div>
            </div>

            <div class="col-lg-3 col-sm-6 col-xs-12 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-diamond text-primary sr-icons"></i>
                    <h3>Pet Sitting</h3>
                    <hr class="primary">
                    <p>
                        <img src="~/Content/images/dogs-2.jpg" />
                    </p>
                    <p class="text-muted">
                        Rather have the home touch?
                        If you would rather your dog gets some off-lead exercise in the garden at home, then Pet Sitting is for you!
                        Rest assured that your pet will receive all the encouragement and attentiveness they need.
                    </p>
                    <a href="/booking?pet-sitting" class="page-scroll btn btn-primary btn-xl sr-button pull-bottom center">Book Pet Sitting</a>
                </div>
            </div>

            <div class="col-lg-3 col-sm-6 col-xs-12 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-diamond text-primary sr-icons"></i>
                    <h3>Feeding</h3>
                    <hr class="primary">
                    <p>
                        <img src="~/Content/images/dogs-4.jpg" style="width: 100%;" />
                    </p>
                    <p class="text-muted">
                        If you just need someone to stop by and make sure your dog is properly fed and watered, we can take care of that for you.
                    </p>
                    <a href="/booking?feeding" class="page-scroll btn btn-primary btn-xl sr-button pull-bottom center">Book Feeding</a>
                </div>
            </div>

            <div class="col-lg-3 col-sm-6 col-xs-12 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-diamond text-primary sr-icons"></i>
                    <h3>Infirmed Care</h3>
                    <hr class="primary">
                    <p>
                        <img src="~/Content/images/dogs-1.jpg" style="width: 100%;" />
                    </p>
                    <p class="text-muted">
                        Had an accident or are you not able to give your dog the kind of exercise they crave.
                        We're always available to help out and pick up the slack for you.
                    </p>
                    <a href="/booking?exercising" class="page-scroll btn btn-primary btn-xl sr-button pull-bottom center">Book Exercising</a>
                </div>
            </div>

        </div>
    </div>
</section>
