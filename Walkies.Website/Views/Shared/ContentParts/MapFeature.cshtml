@using Walkies.Framework.BaseClasses;

@model PageModelBase

<section class="bg-primary map-feature" id="map-feature">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-lg-push-1 text-center">
                <img class="feature-map" src="~/Content/images/feature-map.jpg" />
            </div>
            <div class="col-lg-5 col-lg-push-1 text-center vertical-padding-small">
                <h2 class="section-heading">Reports, maps and photos!</h2>
                <hr class="light">
                <p class="text-faded">At Walkies, we love tech!  All our walks are tracked by GPS so you can watch where and when we walk.  And we'll send you photos from the walk so you can see what she gets up to.</p>
                <hr class="light faded">
                <p class="text-faded">The maps give you peace of mind that your dog is getting the full range of exercise you require, and taken to interesting places.</p>
                <hr class="light faded">
                <p class="text-faded">And if something funny happens or they are having an extra special play then we'll send you the pictures and a report to tell you all about it!</p>
                <a href="/testimonials" class="page-scroll btn btn-default btn-xl sr-button">TESTIMONIALS</a>
            </div>
        </div>
    </div>
</section>
